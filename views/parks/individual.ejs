<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Individual Park Information</title>
</head>
<body>
  <section id="show-page">
    <div>Name: </div>
    <div><%= park.name %></div>
    <div> Year: </div>
    <div><%= park.year %></div>
    <div>Location: </div>
    <div><%= park.location %></div>
    <div>Favorite: </div>
    <div><%= park.favorite ? '<3' : '</3' %></div>
  
    <div>Activities:</div>
    <ul>
      <%- park.activities.map(p => 
        `<li>${p.name} <small>${p.born.toLocaleDateString()}</small></li>`
      ).join('') %>
    </ul>
  </section>
  
  <form id="add-per-to-activities" action="/parks/<%= park._id%>/sports" method="POST">
    <select name="sportId">
      <%- sports.map(p => 
        `<option value="${p._id}">${p.name}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add to Activities</button>
  </form>
  
  <br><br>
  <h2>Comments</h2>
  <form id="add-comment-form" method="POST" action="/parks/<%= park._id %>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Comment">
  </form>
  
  <% if (park.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Comments</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% park.comments.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / park.comments.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>

</body>
</html>
